---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = { title: string; slug: string };
const { title, slug } = Astro.props;
---

<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- HTML Meta Tags -->
    <meta
      name="description"
      content="Vim 駅伝は、駅伝でタスキを繋ぐように Vim に関する記事を参加者で順番に書いていくイベントです。"
    />

    <meta property="og:url" content={`https://vim-jp.org/ekiden${slug}`}/>
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Vim 駅伝は、駅伝でタスキを繋ぐように Vim に関する記事を参加者で順番に書いていくイベントです。"
    />
    <meta
      property="og:image"
      content="https://vim-jp.org/ekiden/og-image.png"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="vim-jp.org" />
    <meta property="twitter:url" content={`https://vim-jp.org/ekiden${slug}`} />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Vim 駅伝は、駅伝でタスキを繋ぐように Vim に関する記事を参加者で順番に書いていくイベントです。"
    />
    <meta
      name="twitter:image"
      content="https://vim-jp.org/ekiden/og-image.png"
    />

    <slot name="head" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <Header slug={slug} />
      <div class="max-w-4xl flex-1 px-4">
        <slot />
      </div>
      <Footer />
    </main>
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Kaushan+Script&family=Yuji+Syuku&display=swap");
  body {
    font-family: sans-serif;
    background-color: #f6f7f8;
  }

  main {
    @apply flex justify-center items-center flex-col p-0 m-0;
  }
</style>
